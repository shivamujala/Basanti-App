<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- SPLASH THEME -->
    <style name="Theme.Basanti.Splash"
        parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Using the gradient drawable instead of a single color -->
        <item name="android:windowBackground">@drawable/splash_gradient</item>
        <item name="android:windowFullscreen">true</item>
        <!-- For Android 12+, this hides the default center icon by making it transparent -->
        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi" xmlns:tools="http://schemas.android.com/tools">@android:color/transparent</item>
    </style>

    <!-- MAIN APP THEME -->
    <style name="Theme.Basanti"
        parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

</resources>